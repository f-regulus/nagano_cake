<div class="container">
  <div><%= flash[:genre_notice] %></div>
  
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-50 h4 bg-light">ジャンル一覧・追加</h2>
    </div>
  </div>

  <div class="mt-5">
    <div class="row">
      <div class="col-6 mx-auto">
        <%= render 'layouts/errors', obj: @genre %>
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <%= render :partial => 'form', :locals => {:f => f} %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-6 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th colspan="2" class="pl-5 bg-light">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="col-9"><%= genre.genre_name %></td>
            <td class="col-3"><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
      
</div>