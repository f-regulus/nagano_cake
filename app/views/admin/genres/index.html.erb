<div class="container">
  <div><%= flash[:genre_notice] %></div>
  
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-50 h4 bg-light">ジャンル一覧・追加</h2>
    </div>
  </div>
  
  <div class="mt-5">
    <div class="row">
      <div class="col-6">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
          <table class="table table-borderless">
            <tbody>
              <td><%= f.label :genre_name, 'ジャンル名', class: "col-form-label" %></td>
              <td><%= f.text_field :genre_name, class: "form-control" %></td>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-6">
      <table class="table">
        <thead>
          <tr>
            <th colspan="2">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>