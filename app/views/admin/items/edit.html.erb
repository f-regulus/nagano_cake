<div class="container">
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">商品編集</h2>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= render 'layouts/errors', obj: @item %>
      <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
        <%= render :partial => 'form', :locals => {:f => f, :edit_flag => true} %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, placeholder: '商品名' %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, '商品説明' %>
      <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します' %>
    </div>

    <div class="form-group">
      <%= f.label :genre_id, 'ジャンル' %>
      <%= f.select :genre_id, Genre.all.map { |genre| [genre.genre_name, genre.id] }, { include_blank: "-- 選択してください --" } %>
    </div>

    <div class="form-group">
      <%= f.label :price, '税抜価格' %>
      <%= f.number_field :price, placeholder: '1000' %><small>円</small>
    </div>

    <div class="form-group">
      <%= f.label :is_active, '販売ステータス' %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売停止' %>
    </div>

    <div class="form-group">
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
  <% end %>
</div>