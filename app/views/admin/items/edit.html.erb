<div class="container">
  <div class="row mt-4">
    <div class="col-md-9 mx-auto">
      <h2 class="text-center w-25 h4 bg-light">商品編集</h2>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><%= f.label :image, '商品画像' %></td>
            <td><%= f.file_field :image, accept: 'image/*' %></td>
          </tr>
          
          <tr>
            <td><%= f.label :name, '商品名' %></td>
            <td><%= f.text_field :name, placeholder: '商品名' %></td>
          </tr>
          
          <tr>
            <td><%= f.label :introduction, '商品説明' %></td>
            <td><%= f.text_area :introduction, placeholder: 'ここに説明文を記述します' %></td>
          </tr>
          
          <tr>
            <td><%= f.label :genre_id, 'ジャンル' %></td>
            <td><%= f.select :genre_id, Genre.all.map { |genre| [genre.genre_name, genre.id] }, { include_blank: '-- 選択してください --' } %></td>
          </tr>
          
          <tr>
            <td><%= f.label :price, '税抜価格' %></td>
            <td><%= f.number_field :price, placeholder: '1000', style: "display: inline;" %><small style="font-size: 16px; height: 38px; line-height: 38px;">円</small></td>
          </tr>
          
          <tr>
            <td><%= f.label '販売ステータス' %></td>
            <td>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, '販売中' %>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, '販売停止' %>
            </td>
          </tr>
          
          <tr>
            <td></td>
            <td><%= f.submit '新規登録', class: "btn btn-success btn-lg" %></td>
          </tr>
        </tbody>
      <% end %>
    </div>
  </div>
</div>