<div class="container">
  <h1>Admin::Items#edit</h1>
  <p>Find me in app/views/admin/items/edit.html.erb</p>
  
  <%= form_with model: @item do |f| %>
  
    <div class="form-group">
      <%= f.label :image, '商品画像' %>
      <%= f.file_field :image, accept: 'image/*' %>
    </div>
    
    <div class="form-group">
      <%= f.label :name, '商品名' %>
      <%= f.text_field :name, placeholder: '商品名' %>
    </div>
    
    <div class="form-group">
      <%= f.label :introduction, '商品説明' %>
      <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します' %>
    </div>
    
    <div class="form-group">
      <%= f.label :genre_id, 'ジャンル' %>
      <%= f.select :genre_id, Genre.all.map { |genre| [genre.genre_name, genre.id] }, { include_blank: "-- 選択してください --" } %>
    </div>
    
    <div class="form-group">
      <%= f.label :price, '税抜き価格' %>
      <%= f.number_field :price, placeholder: '1000' %><small>円</small>
    </div>
    
    <div class="form-group">
      <%= f.label :is_active, '販売ステータス' %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売停止' %>
    </div>
    
    <div class="form-group">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  <% end %>
</div>