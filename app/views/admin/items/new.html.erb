<div class="container">
  <div class="row mt-4">
    <div class="col-md-9 mx-auto">
      <h2><mark class="h4 bg-light">商品新規登録</mark></h2>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-6 mx-auto">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      
      <div class="form-group row">
        <%= f.label :image, '商品画像', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.file_field :image, accept: 'image/*' %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :name, '商品名', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: '商品名', class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :introduction, '商品説明', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :introduction, placeholder: 'ここに説明文を記述します', class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :genre_id, 'ジャンル', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.select :genre_id, Genre.all.map { |genre| [genre.genre_name, genre.id] }, { include_blank: "-- 選択してください --" }, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :price, '税抜価格', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.number_field :price, placeholder: '1000', class: "form-control" %><small class:"d-inilne-block" style="font-size: 16px">円</small>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-3">
          <%= f.label :is_active, '販売ステータス' %>
        </div>
        <div class="col-sm-3">
          <div class="form-check">
            <%= f.radio_button :is_active, false, checked: true, class: "form-check-input" %>
            <%= f.label :is_active, '販売中', class: "form-check-label" %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-check">
            <%= f.radio_button :is_active, true, class: "form-check-input" %>
            <%= f.label :is_active, '販売停止', class: "form-check-label" %>
          </div>
        </div>
      </div>
      
      <div class="form-group col-sm-2 mx-auto">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
      
      <% end %>
    </div>
  </div>
</div>