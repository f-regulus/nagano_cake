<div class="container">
  <div><%= flash[:item_notice] %></div>
      
    <div class="row mt-4">
      <div class="col-md-9 mx-auto">
        <h2><mark class="text-center w-25 h4 bg-light">商品詳細</mark></h2>
      </div>
    </div>
      
    <div class="row">
      <div class="col-10 mx-auto">
      
      <div class="row mt-5">
        <div class="col-5">
          <%= image_tag @item.image, size: "300x200", style: "background-size: cover; background-position: center;" %>
        </div>
        
        <div class="col-7">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td class="w-25">商品名</td>
                <td><%= @item.name %></td>
              </tr>
            
              <tr>
                <td class="w-25">商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
      
              <tr>
                <td class="w-25">ジャンル</td>
                <td><%= @item.genre.genre_name %></td>
              </tr>
      
              <tr>
                <td class="w-25">税込価格<br />(税抜き価格)</td>
                <td><%= @item.with_tax_price %><br /><%= "(" + @item.price.to_s + ")" %></td>
              </tr>
              
              <tr>
                <td class="w-25">販売ステータス</td>
                  <% if @item.is_active == false %>
                <td class="text-success">販売中</td>
                  <% else @item.is_active == true %>
                <td>販売停止中</td>
                  <% end %>
              </tr>
              <tr>
                <td></td>
                <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
        </div>
        
      </div>
    </div>
  </div>
</div>