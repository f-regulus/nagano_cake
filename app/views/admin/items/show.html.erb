<div class="container">
  <div><%= flash[:item_notice] %></div>
  
  <div class="row mt-4">
    <div class="col-md-9 mx-auto">
      <h2><mark class="h4 bg-light">商品詳細</mark></h2>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-4">
      <%= image_tag @item.image, size: "300x200" %>
    </div>
    
    <div class="col-8">
      <p>
        <small>商品名</small>
        <%= @item.name %>
      </p>
      
      <p>
        <small>商品説明</small>
        <%= @item.introduction %>
      </p>
      
      <p>
        <small>ジャンル</small>
        <%= @item.genre.genre_name %>
      </p>
      
      <p>
        <small>税込価格（税抜価格）</small>
        <%= @item.price %>
      </p>
      
      <p>
        <small>販売ステータス</small>
      <% if @item.is_active == false %>
        <small>販売中</small>
      <% else @item.is_active == true %>
        <small>販売停止中</small>
      <% end %>
      </p>
      <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>