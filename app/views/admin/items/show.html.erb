<div class="container">
  <h2>商品詳細</h2>
  <%= image_tag @item.image, size: "200x200" %>
  
  <p>
    <small>商品名</small>
    <%= @item.name %>
  </p>
  
  <p>
    <small>商品説明</small>
    <%= @item.introduction %>
  </p>
  
  <p>
    <small>ジャンル</small>
    <%= @item.genre.genre_name %>
  </p>
  
  <p>
    <small>税込価格（税抜価格）</small>
    <%= @item.price %>
  </p>
  
  <p>
    <small>販売ステータス</small>
  <% if @item.is_active == false %>
    <small>販売中</small>
  <% else @item.is_active == true %>
    <small>販売停止中</small>
  <% end %>
  </p>
  <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
</div>