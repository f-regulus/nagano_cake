<div class="container">
<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="row"></th>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
     <% @orders.each do |order| %>
    <tr>
      <th scope="row"></th>
      <td>
      　<%= link_to admin_order_path(order) do %>
        <%= order.created.at.to_s(:datemime_jp) %>
        <% end %>
      </td>
      <td><%= order.custmer.full_name %></td>
      <td><%= order.order_details.sum(:amount) %></td>
      <td><%= order.status %></td>
    </tr>
     <% end %>
  </tbody>
 </table>
   <div class="d-flex justify-content-center">
  <div><%= paginate @orders %></div>
  </div>
</div>