<div class="container">
  <h2 class="text-center bg-light h4 col-3">注文履歴詳細</h2>
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= link_to admin_order_path(@order), class: "text-primary" do %>
                <%= @order.customer.full_name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.to_s(:datemime_jp) %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.customer.postal_code %>
                <%= @order.customer.address %>
            </td>
          </tr>
          <tr>
            <td>支払い方法</td>
            <td>
              <%= @order.payment %>
            </td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
               <%= form_with model:@order, url: admin_order_path, class: "d-inline-block" do |f| %>
                 <%= f.select :status, ["入金待ち", "入金確認","製作中","発送準備中","発送済み"], class: "form-select" %>
                 <%= f.submit "更新", class: 'btn btn-primary ms-2' %>
               <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!--注文した商品をテーブルで表示-->
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="col-md-4">商品名</th>
          <th class="col-md-2">単価（税込）</th>
          <th class="col-md-2">数量</th>
          <th class="col-md-2">小計</th>
          <th class="col-md-2">製作ステータス</th>
        </tr>
      </thead>
      <% @order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td>¥<%= (order_detail.price*1.1).floor.to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td>¥<%= ((order_detail.price * order_detail.amount*1.1).floor).to_s(:delimited) %></td>
          <td>
            <%= form_with model:order_detail, url: admin_order_order_details_path(order_detail.id),method: :patch, class: "d-inline-block" do |f| %>
              <%= f.select :make_status, ["着手不可", "製作待ち", "製作中", "製作完了"], class: "form-select" %>
              <%= f.submit "更新", class: 'btn btn-primary ms-2' %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

 <!--注文商品の合計金額表示-->
  <div class="col-md-4">
    <div>
      <p>
        <strong>商品合計</strong>
        ¥<%= (@order.billing_amount - @order.postage).to_s(:delimited) %>
      </p>
    </div>

    <div>
      <p>
        <strong>送料</strong>
        ¥<%= @order.postage %>
      </p>
    </div>

    <div>
      <p>
        <strong>請求金額合計</strong>
        ¥<%= @order.billing_amount.to_s(:delimited) %>
      </p>
    </div>
  </div>
</div>
