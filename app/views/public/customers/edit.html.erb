<h2>会員情報編集</h2>
<table>
  <tbody>
    <%= form_with model: @customer, url: customers_mypage_path do |f| %>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :kana_first_name %> <%= f.text_field :kana_last_name %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </tbody>
</table>
<%= f.submit "編集内容を保存" %>
<%= link_to "退会する", customers_unsubscribe_path %>

<% end %>