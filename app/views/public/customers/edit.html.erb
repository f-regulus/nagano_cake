<div class='container'>
  <div class='row'>
    <div class='mt-3 w-75 p-3'>
      <h4>会員情報編集</h4>
      <%= form_with model: @customer, url: customers_mypage_path do |f| %>
        <table>
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :first_name, size: 20 %> <%= f.text_field :last_name, size: 20 %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :kana_first_name, size: 20 %> <%= f.text_field :kana_last_name, size: 20 %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, size: 20 %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, size: 60 %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, size: 20 %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, size: 20 %></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        <%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>