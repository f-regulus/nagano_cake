<div class='container'>
  <div class='row'>
    <div class='mt-3 w-75 p-3'>
      <div class='mt-3'>
        <h4>マイページ</h4>
        <strong>登録情報</strong>
        <%= link_to "編集する", customers_mypage_edit_path, class: 'btn btn-success' %>
      </div>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= @customer.first_name %></td>
            </tr>
              <td>カナ</td>
              <td><%= @customer.kana_first_name %></td>
            </tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            </tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            </tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            </tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
    </div>
      <div class='mt-1 w-75'>
        <strong>配送先</strong>
        <%= link_to "一覧を見る", deliveries_path, class: 'btn btn-primary' %>
      </div>
      <div class='mt-1 w-75'>
        <strong>注文履歴</strong>
        <%= link_to "一覧", customers_mypage_edit_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>