<%#= render 'new', delivery: @delivery %>
<div class='container'>
  <%= render 'layouts/errors', obj: @delivery %>
  <div class='row'>
    <div class='mt-3 w-75 p-3'>
      <%= form_with model: @delivery do |f| %>
        <h4>郵便番号(ハイフン)</h4>
        <%= f.text_field :postcode %>
        <h4>住所</h4>
        <%= f.text_field :address %>
        <h4>宛名</h4>
        <%= f.text_field :name %>
        <%= f.submit "変更内容を保存" %>
      <% end %>
    </div>
  </div>
</div>