<h3>配送先登録 / 一覧</h3>

<%#=配達先新規登録%>
<%= render 'new', delivery: @delivery %>

<%#=配達先登録一覧%>
<table>
  <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postcode %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td><%= link_to "編集する" edit_delivery_path(delivery.id) %></td>
        <td><%= link_to "削除する", delivery_path(delivery.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
