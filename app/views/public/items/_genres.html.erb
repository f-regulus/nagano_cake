<div class="col-3">
  <div class="card">
    <table class="table">
      <thead class="text-center">
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody class="table-borderless">
        <% genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre.genre_name, genre_search_path(items: genre.items.ids, genre_word: genre.genre_name) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>