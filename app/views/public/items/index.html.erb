<div class="container">
  <div class="row">
      <%= render 'genres', genres: @genres %>
    <div class="col-9">
      <h3><strong>商品一覧</strong>(全<%= @items.count %>件)</h3>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.image, size: '180x100' %>
            <% end %>
            <%= item.name %><br>
            ￥<%= item.price %>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>