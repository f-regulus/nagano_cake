<div class="container">
  <div class="row">
    <%= render 'genres', genres: @genres %>
    <div class="col-3">
      <%= image_tag @item.image, size: '250x200' %>
    </div>
    <div class="col-6">
      <h3><%= @item.name %></h3>
      <h4><%= @item.introduction %></h4>
      <strong>￥<%= @item.price %></strong>(税込)
    </div>
  </div>
</div>