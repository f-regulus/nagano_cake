<div class="container">
  <div class="row">
    <%= render 'genres', genres: @genres %>
    <div class="col-3">
      <%= image_tag @item.image, size: '250x200' %>
    </div>
    <div class="col-6">
      <h3><%= @item.name %></h3>
      <h4><%= @item.introduction %></h4>
      <strong>￥<%= @item.with_tax_price %></strong>(税込)

      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..10], { include_blank: '個数選択' }, { required: true } %>
        <%= f.submit 'カートに入れる', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>