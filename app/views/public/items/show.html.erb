<div class="container">
  <div class="row">
    <%= render 'genres', genres: @genres %>
    <div class="col-3">
      <%= image_tag @item.image, size: '250x200' %>
    </div>
    <div class="col-6">
      <h3><%= @item.name %></h3>
      <h4><%= @item.introduction %></h4>
      <strong>￥<%= @item.price %></strong>(税込)

      <%= form_with model: [@item, @cart_item], url: cart_items_path do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit 'カートに入れる', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>