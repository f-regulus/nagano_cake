<div class='container'>
  <div class='row'>
    <h2 class="text-center w-25 h4 bg-light">注文情報確認</h2>
    
    <%#= 注文商品%>
    <%= render "order_product", cart_items: @cart_items %>

    <div class='col-4 mt-3'>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark">送料</td>
            <td><% @order.postage = 800 %>
              <%= @order.postage %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">商品合計</td>
            <td><%= total.to_i %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">請求金額</td>
            <td><% @order.billing_amount = @order.postage + total.to_i %>
              <%= @order.billing_amount %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

<%= form_with model: @order do |f| %>
      <div class='row mt-3 w-75'>
        支払方法<%= f.hidden_field :payment %>
      </div>
      <div class='row mt-3 w-75'>
        お届け先<%= f.hidden_field :postal_code %><%= f.hidden_field :address %><%= f.hidden_field :name %>
      </div>

      <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
</div>