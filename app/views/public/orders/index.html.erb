<div class='container'>
  <div class='row'>
    <h2 class="text-center w-25 h4 bg-light mt-3">注文履歴一覧</h2>

    <div class='col-12 mt-3'>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark">注文日</td>
            <td class="table-active text-dark">配達先</td>
            <td class="table-active text-dark">注文商品</td>
            <td class="table-active text-dark">支払金額</td>
            <td class="table-active text-dark">ステータス</td>
            <td class="table-active text-dark">注文詳細</td>
          </tr>
            <% @order_details.each do |order_details| %>
              <tr>
                <td><%= order_details.created_at %></td>
                <td><%= order_details.order_id.postal_code %>
                  <%= order_details.order_id.address %>
                  <%= order_details.order_id.name %></td>
                <td><%= order_details.price %></td>
                <td><%= order_details.order_id.status %></td>
                <td><%= link_to "表示する", orders_path(order.id), class: 'btn btn-primary' %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>