<div class='container'>
  <div class='row'>
    <div class='mt-3 w-75 p-3'>
      注文情報入力
      <div class='mt-3 w-75 p-3'>
        <strong>支払方法</strong>
        <div class='ml-3'>
          <%= form_with model: @order do |f| %>
            <%= f.radio_button :payment, :クレジットカード,checked: "checked" %>  
            <%= f.label :payment, "クレジットカード" %>
            <br>
            <%= f.radio_button :payment, :銀行振込 %>  
            <%= f.label :payment, "銀行振込" %>
        </div>
      </div>
      <div class='mt-3 w-75 p-3'>
        <strong>お届け先</strong>
        <div class='ml-3'>
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :customer_id, "ご自身の住所" %>  
          <%= @customer.postal_code %>
          <%= @customer.address %></br>
          <%= @customer.first_name %>
        </div>
        <div class='ml-3'>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :deliveries, "登録済住所から選択" %>
          <%= f.collection_select :customer_id, @deliveries, :id, :address %>
        </div>
        <div class='ml-3'>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :order_address, "新しいお届け先" %> 
        <%#=配達先新規登録%>
        <%= render 'public/deliveries/new', delivery: Delivery.new %>
        </div>
      </div>
      <%= link_to "確認画面へ進む", deliveries_path, class: 'btn btn-primary' %>
              <% end %>
    </div>
  </div>
</div>