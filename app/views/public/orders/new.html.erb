<div class='container'>
  <div class='row'>
    <div class='mt-3 w-75 p-3'>
      <h2 class="text-center w-25 h4 bg-light">注文情報入力</h2>
      <div class='mt-3 w-75 p-3'>
        <strong>支払方法</strong>
        <div class='ml-6'>
          <%= form_with model: @order, url: orders_confirm_path do |f| %>
            <%= f.radio_button :payment, :クレジットカード,checked: "checked" %>
            <%= f.label :payment, "クレジットカード" %>
            <br>
            <%= f.radio_button :payment, :銀行振込 %>
            <%= f.label :payment, "銀行振込" %>
        </div>
      </div>
      <div class='mt-3 w-75'>
        <strong>お届け先</strong>
        <div class='ml-6'>
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :customer_id, "ご自身の住所" %></br>
          <%= @customer.postal_code %>
          <%= @customer.address %></br>
          <%= @customer.first_name %>
          <%= @customer.last_name %>
        </div>
        <div class='ml-6'>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :deliveries, "登録済住所から選択" %></br>
          <%= f.collection_select :customer_id, @deliveries, :id, :full_delivery %>
        </div>
        <div class='ml-6'>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :order_address, "新しいお届け先" %>
          <table>
            <tbody>
              <tr>
                <td><a>郵便番号(ハイフンなし)</a></td>
                <td><%= f.text_field :postal_code, size: 15 %></td>
              </tr>
              <tr>
                <td><a>住所</a></td>
                <td><%= f.text_field :address, size: 50 %></td>
              </tr>
              <tr>
                <td><a>宛名</a></td>
                <td><%= f.text_field :name, size: 15 %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>