<div class='container'>
  <div class='row'>
    <h2 class="text-center w-25 h4 bg-light mt-3">注文履歴詳細</h2>

    <div class='col-12 mt-3'>
      <h2 class="w-25 h4 mt-3">注文情報</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark">注文日</td>
            <td><%= @order_detail.created_at %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">配達先</td>
            <td><%= @order_detail.order_id.postal_code %></br>
              <%= @order_detail.order_id.address %></br>
              <%= @order_detail.order_id.name %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">支払方法</td>
            <td><%= @order_detail.order_id.payment %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">ステータス</td>
            <td><%= @order_detail.order_id.status %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class='col-4 mt-3'>
      <h2 class="w-25 h4 mt-3">請求情報</h2>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-active text-dark">商品合計</td>
            <td><% @order_detail.order.postage = 800 %>
              <%= @order_detail.order.postage %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">配送料</td>
            <td><%= total.to_i %></td>
          </tr>
          <tr>
            <td class="table-active text-dark">ご請求額</td>
            <td><% @order_detail.order.billing_amount = @order_detail.order.postage + total.to_i %>
              <%= @order_detail.order.billing_amount %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

      <%#= 注文商品%>
      <h2 class="w-25 h4 mt-3">注文内容</h2>
      <%= render "order_product", cart_items: @cart_items %>

</div>