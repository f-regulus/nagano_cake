<div class="container">
  <div class="col-md-8 mx-auto mt-4">
    <h3 class="bg-light">新規会員登録</h3>
  </div>

  <div class="row mt-4">
    <div class="col-md-10 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :first_name, '名前' %>
          <div class="col">
            <%= f.text_field :first_name, autofocus: true, placeholder: "令和", class: "form-control" %>
          </div>
          <div class="col">
            <%= f.text_field :last_name, placeholder: "道子", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :kana_first_name, 'フリガナ' %>
          <div class="col">
            <%= f.text_field :kana_first_name, placeholder: "レイワ", class: "form-control" %>
          </div>
          <div class="col">
            <%= f.text_field :kana_last_name, placeholder: "ミチコ", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :address, '住所' %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :telephone_number, '電話番号' %>
          <%= f.text_field :telephone_number, placeholder: "00000000000", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, 'パスワード' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, 'パスワード(確認用)' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-10 mx-auto mt-4">
    <h3 class="mt-3"><mark class="bg-light">既に登録済みの方</mark></h3>
    <%= render "public/shared/links" %>からログインしてください
  </div>
</div>