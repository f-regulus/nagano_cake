<div class="container">
  
  <div class="row mt-4">
    <div class="col-10 mx-auto">
      <h2 class="text-center w-50 h4 bg-light"><%= @word %>の検索結果です。<br /><%= @result.count %>件ヒットしました。</h2>
      <% if @result.empty? %>
        <p>該当の商品はありませんでした。</p>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-8 mx-auto">
      
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @result.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item), class: "link-dark" %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.genre_name %></td>
                <% if item.is_active == false %>
              <td class="text-success">販売中</td>
                <% else item.is_active == true %>
              <td>販売停止中</td>
                <% end %>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>